<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- 将 tools/xxx.html 重定向到 tools/xxx/index.html -->
        <rule name="RedirectToolsHtmlToIndex" stopProcessing="true">
          <match url="^tools/([^/]+)\.html$" />
          <action type="Redirect" url="/tools/{R:1}/index.html" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- 启用GZIP压缩 -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    
    <!-- 设置静态内容缓存 -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="365.00:00:00" />
    </staticContent>
  </system.webServer>
</configuration>